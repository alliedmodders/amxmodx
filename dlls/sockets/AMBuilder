# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python:
import os.path

binary = AMXX.Module(builder, 'sockets')

binary.sources = [
  'sdk/amxxmodule.cpp',
  'sockets.cpp',
]

if builder.target_platform == 'windows':
  binary.compiler.postlink += ['wsock32.lib', 'ws2_32.lib']

AMXX.modules += [builder.Add(binary)]
