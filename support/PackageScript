  'cstrike/maps.ini',
  'cstrike/modules.ini',
  'cstrike/plugins.ini',
  'cstrike/stats.ini',
  'dod/core.ini',
  'dod/cvars.ini',
  'dod/maps.ini',
  'dod/modules.ini',
  'dod/plugins.ini',
  'esf/modules.ini',
  'esf/plugins.ini',
  'ns/amxx.cfg',
  'ns/clcmds.ini',
  'ns/cmds.ini',
  'ns/cvars.ini',
