# Copy license files
licenses = [
  'ACKNOWLEDGEMENTS.txt',
  'GPLv2.txt',
  'GPLv3.txt',
  'LICENSE.txt',
]

for license in licenses:
  builder.AddCopy(
    source = os.path.join(builder.sourcePath, 'public', 'licenses', license),
    output_path = folder_map['base/addons/amxmodx']
  )
